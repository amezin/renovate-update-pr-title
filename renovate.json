{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "https://raw.githubusercontent.com/amezin/renovate-update-pr-title/main/preset.json"
  ],
  "groupName": "All deps",
  "groupSlug": "alldeps",
  "packageRules": [
    {
      "matchPackageNames": ["pyyaml", "pymeta3"],
      "prBodyColumns": [
        "Package",
        "Type",
        "Update",
        "Change",
        "Pending",
        "Issue"
      ],
      "commitMessagePrefix": "{{#each upgrades as |upgrade|}}{{upgrade.depName}} {{/each}}"
    }
  ]
}
